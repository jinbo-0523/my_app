<%= render "layouts/error_messages" %>
<%= form_with model: @memo, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content, size: "45*30" %>
  </div>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

    <%= form.submit button_value %>
<% end %>


