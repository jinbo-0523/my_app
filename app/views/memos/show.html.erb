<h1>投稿詳細</h1>
<h2><%= @memo.title %></h2>
<h3><%= @memo.content %></h3>
<% if @memo.image? %>
  <p><%= image_tag @memo.image.url %></p>
<% end %>

<% if user_signed_in? && current_user.id == @memo.user.id %>
  <%= link_to "編集", edit_memo_path(@memo) %>
  <%= link_to "削除", memo_path(@memo), method: :delete, data: {confirm: "削除しますか？" } %>
<% end %>
